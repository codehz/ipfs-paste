doctype html
html(lang="en")
  include /includes/head.pug
  +jslink("default")
  +csslink("show")
  title Paste #{hash}

  header
    .panel.panel-left
      .title Paste
    .panel.panel-right
      .a-create Create new paste

  section
    each item in files
      if item.type === "file"
        .card
          .card-header
            .filename=item.filename
          code.card-body.content=item.content
  .placeholder